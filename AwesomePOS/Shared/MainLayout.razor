@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Fixed="true" Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Style="color:white" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.Web" Style="color:white" Link="https://www.abdussalamalshaebi.com/" Target="_blank" />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Style="color:white" Link="https://github.com/AbdussalamAl-shaebi/AwesomePOS" Target="_blank" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Awesome POS</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer Class="my-16 pt-8" MaxWidth="MaxWidth.Large">
            @Body
        </MudContainer>
        @*Class="my-16 pt-8"*@
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}